{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/types/*"] // 変更: internalSharedではなくtypesを参照
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
